		//do stuff
	}
	public void sortBySerial()
	{
		//do stuff
	}
	public void sortByDate()
	{
		//do stuff
	}
	public void sortByType()
	{
		//do stuff
	}
	public void addPaper(Paper paper)
	{
		papers.add((papers.getClass())paper);
	}
	
	
	@Override
	public int compare(Paper o1, Paper o2) {
		// TODO Auto-generated method stub
		return 0;
	}
	
	
	
}
